<body class="text-center">

    <div class="cover-container d-flex h-100 p-3 mx-auto flex-column">
      <header class="masthead mb-auto">
        <div class="inner">
          <h3 class="masthead-brand">Sheridan</h3>
          <nav class="nav nav-masthead justify-content-center">
            <a class="nav-link active" href="#">Home</a>
            <a class="nav-link" href="mailto: williammena1991@gmail.com">Contact</a>
          </nav>
        </div>
      </header>

      <main role="main" class="inner cover">
        <h1 class="cover-heading">Sheridan Currency.</h1>

        <br>
        <%= form_tag('/create', method: 'post') do %>
          <%= label_tag(:amount, "Amount: $") %>
          <%= number_field_tag(:amount, @previous_amount, options = {class: "text-center"}) %>
          <br>
            <br>
            <label>FROM: </label>
            <%= select_tag "currency_from", options_for_select(["USD", "EUR", "SGD"], @from), class: "custom-select custom-select-sm col-4" %>
            <label>TO: </label>
            <%= select_tag "currency_to", options_for_select(["USD", "EUR", "SGD"], @to), class: "custom-select custom-select-sm col-4" %>
          <br>
          <br>


          <%= submit_tag("Convert", class: "btn btn-lg btn-block btn-outline-light") %>
        <% end %>

          <br/>
          <label>OUTPUT: <%= @amount %> </label>
          <h1 class="output"></h1>

      </main>

      <footer class="mastfoot mt-auto">
        <div class="inner">
          <p>Application built by <a href="https://drive.google.com/file/d/1U1PPAdUlHsvJVKPssBATOAmhcod_IEGa/view?usp=sharing">William Mena</a></p>
        </div>
      </footer>
    </div>

</body>
